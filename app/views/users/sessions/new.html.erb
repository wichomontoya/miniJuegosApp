

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">  
    <h2 align="center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
         <input type="email" class="form-control" id="inputEmail3" placeholder="Email" <%= f.email_field :email, autofocus: true %>
        
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <input type="password" class="form-control" id="inputPassword3" placeholder="Password" <%= f.password_field :password, autocomplete: "off" %>
       
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>


    <%= render "users/shared/links" %>
    <br>
    <br>
  </div>
</div>